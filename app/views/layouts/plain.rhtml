<html>
  <head>
    <title>
      <%= @layout_page_title || "Bioinformatics Toolkit" %>
    </title>

    <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
    <meta http-equiv="Pragma" content="no-cache" />
    <meta content="no-cache" http-equiv="no-cache" />
    <meta http-equiv="Expires" content="-1" />
	    <meta http-equiv="Cache-Control" content="no-cache" />
	      <meta name="author" content="Michael Remmert">
		<%= @meta %>

		<% if LOCATION == "Munich" %>
      <%= stylesheet_link_tag "styles_munich", "navisection_munich", :media => 'all' %>
      <% if @widescreen %>
        <%= stylesheet_link_tag "widescreen_munich", :media => 'all' %>
      <% end %>
      <% if @fullscreen %>
        <%= stylesheet_link_tag "fullscreen_munich", :media => 'all' %>
      <% end %>
    <% else %>
      <%= stylesheet_link_tag "styles_tuebingen", "navisection_tuebingen", :media => 'all' %>
      <% if @widescreen %>
        <%= stylesheet_link_tag "widescreen_tuebingen", :media => 'all' %>
      <% end %>
      <% if @fullscreen %>
        <%= stylesheet_link_tag "fullscreen_tuebingen", :media => 'all' %>
      <% end %>
    <% end %>
    <%= stylesheet_link_tag "tabsection", "form", :media => 'all' %>		
		
		
		<%= javascript_include_tag "toolkit", "browser_sniffer", "overlib", "overlib_cssstyle"  %>
		<%= javascript_include_tag :defaults %>		
	
		<%= if @tool then javascript_include_tag(@tool['name']) end -%>
		<% if @include_js && !@include_js.empty? -%>
		<%= javascript_include_tag @include_js %>
		<% end -%>
		
		<% if @include_js_text and !@include_js_text.empty? %>
		<script type="text/javascript">
			<%= @include_js_text %>
		</script>
		<% end -%>

<style type="text/css">
a {
	color: #005FA9;
	font-size: 11px;
}
</style>

  </head>
  <% js_onload = @js_onload ? @js_onload : "" %>
  <body style="background-image: none;" onload="<%= js_onload %>">

	<%= @content_for_layout %>	

  </body>
</html>
