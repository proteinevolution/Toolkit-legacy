<div id="jobsection">
	<ul>
		<li <%= params[:action].nil? || params[:action] == 'index' ? 'class="current"' : '' %>>
			<%= link_to('Description',{:action => 'index'}, {:onmouseover => "return overlib('Goto Main page');", :onmouseout => "return nd();"}) %>
		</li>
		<li <%= params[:action] == 'browse' ? 'class="current"' : '' %>>
			<%= link_to('Browse database',{:action => 'browse'}, {:onmouseover => "return overlib('Goto Main page');", :onmouseout => "return nd();"}) %>
		</li>
		<li <%= params[:action] == 'search' ? 'class="current"' : '' %>>
			<%= link_to('Search database',{:action => 'search'}, {:onmouseover => "return overlib('Goto Main page');", :onmouseout => "return nd();"}) %>
		</li>
	</ul>
</div>
